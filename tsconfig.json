{
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    // "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
